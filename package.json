{
  "name": "luxury-perfume-store",
  "version": "1.0.0",
  "description": "Luxury Perfume E-commerce Store with Vue 3 & Firebase",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "generate-sitemap": "node scripts/sitemap-generator.js",
    "type-check": "vue-tsc --noEmit",
    "create-superadmin": "node scripts/create-superadmin.js",
    "create-admin": "node scripts/create-superadmin.js --interactive",
    "reset-admin": "node scripts/create-superadmin.js --force",
    "setup-admin": "node scripts/simple-setup.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{vue,js,ts,json,css,scss}\"",
    "prepare": "husky install",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "emulators": "firebase emulators:start",
    "emulators:ui": "firebase emulators:start --only ui",
    "emulators:all": "firebase emulators:start --import=./firebase-export --export-on-exit=./firebase-export"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@vueuse/core": "^10.7.0",
    "date-fns": "^4.1.0",
    "firebase": "^10.14.1",
    "pinia": "^2.1.0",
    "uuid": "^9.0.0",
    "vue": "^3.4.0",
    "vue-i18n": "^12.0.0-alpha.3",
    "vue-router": "^4.2.0",
    "vuefire": "^3.2.2",
    "yup": "^1.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/vue": "^8.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.0",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.0.0",
    "husky": "^8.0.3",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.5",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.2.0",
    "vue-tsc": "^2.1.6",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "vue3",
    "firebase",
    "ecommerce",
    "luxury",
    "perfume",
    "bilingual",
    "typescript",
    "admin",
    "superadmin"
  ],
  "author": "Luxury Perfume Store",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/luxury-perfume-store.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/luxury-perfume-store/issues"
  },
  "homepage": "https://luxuryperfumes.com",
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
